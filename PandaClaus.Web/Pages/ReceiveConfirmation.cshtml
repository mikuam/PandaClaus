@page
@model ReceiveConfirmationModel
@{
    ViewData["Title"] = "Potwierdzenie odbioru paczki";
}

<div class="container-xxl bg-white p-0">
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5 align-items-center justify-content-center">
                <div class="col-lg-8">
                    <h1 class="mb-4">Potwierdzenie dostarczenia paczki</h1>

                    @if (Model.Letter != null)
                    {
                        <div class="alert alert-info">
                            <h4>List numer: @Model.Letter.Number</h4>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert @(Model.ShowForm ? "alert-warning" : "alert-success") alert-dismissible fade show" role="alert">
                            <i class="fa @(Model.ShowForm ? "fa-exclamation-triangle" : "fa-check-circle") me-2"></i>
                            @Model.Message
                        </div>
                    }

                    @if (Model.ShowForm && Model.Letter != null)
                    {
                        <div class="card">
                            <div class="card-body">
                                <h4 class="card-title mb-4">Czy paczka zosta?a dostarczona?</h4>
                                
                                <form method="post" id="confirmForm">
                                    <input type="hidden" name="rowNumber" value="@Model.Letter.RowNumber" />
                                    <input type="hidden" name="code" value="@Model.Letter.Number" />
                                    
                                    <div class="mb-4">
                                        <label for="numberOfBoxes" class="form-label">Ile paczek zostało dostarczonych?</label>
                                        <input type="number" class="form-control" id="numberOfBoxes" name="numberOfBoxes" 
                                               value="1" min="1" max="10" required>
                                        <div class="form-text">Podaj liczbę dostarczonych paczek/kartonów</div>
                                    </div>

                                    <div class="mb-4">
                                        <label for="securityCode" class="form-label">Kod zabezpieczający <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="securityCode" name="securityCode" 
                                               placeholder="Wpisz kod zabezpieczający" required>
                                        <div class="form-text">Kod zabezpieczający znajdziesz u organizatora akcji</div>
                                    </div>

                                    <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-4">
                                        <button type="submit" asp-page-handler="Confirm" class="btn btn-success btn-lg px-5">
                                            <i class="fa fa-check me-2"></i>Potwierdź dostarczenie paczki
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>

                    }
                    else if (!Model.ShowForm && string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-warning">
                            <p>Nie znaleziono listu do potwierdzenia. Sprawdź link i spróbuj ponownie.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
