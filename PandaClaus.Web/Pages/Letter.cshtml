@page
@model LetterModel
@{
    ViewData["Title"] = "List";
}

<div class="container-xxl bg-white p-0">
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5 align-items-center">
                <h1 class="mb-4">@Model.Letter.ChildenNamesAndAges</h1>

                <div class="col-lg-12 wow fadeIn" data-wow-delay="0.1s">
                    <div class="overflow-hidden carousel-background p-5 pe-0">
                        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @for (int i = 0; i < Model.Letter.ImageUrls.Count(); i++)
                                {
                                    <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
                                }
                            </div>
                            <div class="carousel-inner">
                                @foreach (var imageUrl in Model.Letter.ImageUrls)
                                {
                                    <div class="carousel-item carousel-big-image @(Model.Letter.ImageUrls.First() == imageUrl ? "active" : "")">
                                        <img class="d-block letter-big-image" src="@imageUrl" alt="letter image">
                                    </div>
                                }
                                )
                            </div>
                            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Poprzedni</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Następny</span>
                            </button>
                        </div>
                    </div>
                </div>

                <div class="col-lg-12 wow fadeIn" data-wow-delay="0.5s">
                    <p class="mb-4">@Model.Letter.Reason</p>
                    @if (Model.Letter.IsAssigned)
                    {
                        <p><i class="fa fa-times text-primary me-3"></i>Zarezerwowane</p>
                    }
                    else
                    {
                        <p><i class="fa fa-check text-primary me-3"></i>Dostępne</p>
                        <hr/>
                        <h3>Zarezerwuj list</h3>
                        <form method="post">
                            <input type="text" class="d-none" id="rowNumber" name="RowNumber" value="@Model.Letter.RowNumber">
                            <div class="form-group form-paddding">
                                <label for="name">Imię i nazwisko</label>
                                <input type="text" class="form-control" id="name" name="Name" placeholder="Wpisz imię i nazwisko">
                            </div>
                            <div class="form-group form-paddding">
                                <label for="inputEmail">E-mail</label>
                                <input type="email" class="form-control" id="email" name="Email" placeholder="Wpisz adres e-mail">
                            </div>
                            <div class="form-group form-paddding">
                                <label for="phone">Numer telefonu</label>
                                <input type="phone" class="form-control" id="phone" name="Phone" placeholder="Wpisz numer telefonu">
                            </div>
                            <button type="submit" class="btn btn-primary py-3 px-5 mt-3">Zarezerwuj</button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
