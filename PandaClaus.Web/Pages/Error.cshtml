@page
@model ErrorModel
@{
    ViewData["Title"] = "Błąd - Panda Claus";
}

<div class="container-xxl bg-white p-0">
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row g-5 align-items-center justify-content-center">
                <div class="col-lg-8">
                    <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                        <div class="mb-4">
                            <img src="~/img/panda_bear_back.png" alt="Sad Panda" style="max-width: 200px; height: auto;" />
                        </div>
                        <h1 class="display-4 mb-4">Coś poszło nie tak!</h1>
                        <p class="lead mb-4">
                            Przepraszamy, wystąpił nieoczekiwany błąd podczas przetwarzania Twojego żądania.
                        </p>
                        
                        @if (Model.ShowRequestId)
                        {
                            <div class="alert alert-secondary" role="alert">
                                <p class="mb-0">
                                    <strong>Identyfikator żądania:</strong> <code>@Model.RequestId</code>
                                </p>
                            </div>
                        }

                        <div class="mt-4">
                            <p>Co możesz zrobić?</p>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <i class="fa fa-arrow-left text-primary me-2"></i>
                                    <a href="javascript:history.back()" class="text-decoration-none">Wróć do poprzedniej strony</a>
                                </li>
                                <li class="mb-2">
                                    <i class="fa fa-home text-primary me-2"></i>
                                    <a href="/" class="text-decoration-none">Przejdź do strony głównej</a>
                                </li>
                                <li class="mb-2">
                                    <i class="fa fa-envelope text-primary me-2"></i>
                                    <a href="mailto:pandaclaus@pandateam.pl" class="text-decoration-none">Skontaktuj się z nami</a>
                                </li>
                            </ul>
                        </div>

                        <div class="mt-5">
                            <a href="/" class="btn btn-primary btn-lg py-3 px-5">
                                <i class="fa fa-home me-2"></i>Powrót do strony głównej
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
