@page
@model IndexModel
@{
    ViewData["Title"] = "Panda Claus - Listy";
}

<!-- List Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-12">
                <div class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">Listy</h1>
                    <p>Przeglądaj listy i wybierz ten, który chcesz ufundować</p>
                </div>
            </div>
        </div>

        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @foreach (var letter in Model.Letters)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden letter-small-image">
                                    <a asp-area="" asp-page="/Letter" asp-route-rowNumber="@letter.RowNumber">
                                        <img class="img-fluid" src="@letter.ImageUrls.First()" alt="">
                                    </a>
                                    @if (letter.IsAssigned)
                                    {
                                        <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3 reserved">List zarezerwowany</div>
                                    }
                                </div>
                                <div class="p-4 pb-0">
                                    <a class="d-block h5 mb-2" asp-area="" asp-page="/Letter" asp-route-rowNumber="@letter.RowNumber">@letter.ChildenNamesAndAges</a>
                                    <p>@letter.Reason</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
